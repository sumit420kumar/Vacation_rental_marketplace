<% layout("/layoute/boilerplate") -%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Creating a new listing</h3>
            <br><br>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb=3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" type="text" placeholder="Enter your title" class="form-control"
                        required>
                    <div class="valid-feedback">Title looks good! &#10003;</div>
                    <div class="invalid-feedback">Fill correctly</div>

                </div>
                <br><br>
                <div class="mb=3">
                    <label for="description" class="form-label">description</label>
                    <textarea name="listing[description]" placeholder="Enter description" class="form-control"
                        required></textarea>
                    <div class="valid-feedback"> &#10003;</div>
                    <div class="invalid-feedback"> Please enter a short description</div>

                </div>
                <br><br>
                <div class="mb=3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image]" type="file" class="form-control">

                </div>
                <br><br>
                <div class="row">
                    <div class="mb=3 col-md-4">
                        <label for="price" class="form-label">price</label>
                        <input name="listing[price]" type="text" placeholder="Enter price" class="form-control"
                            required>
                        <div class="valid-feedback"> &#10003;</div>
                        <div class="invalid-feedback">Price should be valid</div>

                    </div>

                    <div class="mb=3 col-md-8">
                        <label for="country" class="form-label">country</label>
                        <input name="listing[country]" type="text" placeholder="Enter country" class="form-control"
                            required>
                        <div class="valid-feedback"> &#10003;</div>
                        <div class="invalid-feedback">country name should be valid</div>

                    </div>
                </div>
                <br><br>
                <div class="mb=3">
                    <label for="location" class="form-label">location</label>
                    <input name="listing[location]" type="text" placeholder="Enter location" class="form-control"
                        required>
                    <div class="valid-feedback"> &#10003;</div>
                    <div class="invalid-feedback">location should be valid</div>

                </div>
                <br><br>

                <br><br>
                <button class="btn btn-dark add-btn mt-3">Add</button>
                <br><br>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>