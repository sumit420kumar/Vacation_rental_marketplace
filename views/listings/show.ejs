<% layout("/layoute/boilerplate.ejs") -%>

    <div class="row mt-3 show-card">
        <div class="col-8 offset-3 ">
            <h3>
                <%=listing.title%>
            </h3>
        </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listing.image.url  %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%=listing.owner.username%>
                    </b>
                </p>
                <p class="card-text">
                    <%=listing.description%>
                </p>
                <p class="card-text">&#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> /
                        night <i class="tax-info">&nbsp; &nbsp;+12% GST</i></p>
                <p class="card-text">
                    <%=listing.location%>
                </p>
                <p class="card-text">
                    <%=listing.country%>
                </p>

            </div>
        </div>
        <% if(curruser && listing.owner._id.equals(curruser._id)) {%>
            <div class="btns">
                <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

                <form action="/listings/<%= listing._id%>?_method=DELETE" method="post">
                    <button class="btn btn-dark offset-5">DELETE</button>
                </form>
            </div>
            <% }%>
                <div class="col-8 offset-3">

                    <% if(curruser){%>
                        <h3>Leave a Review</h3>
                        <form action="/listings/<%=listing._id%>/reviews" method="post" novalidate
                            class="needs-validation">

                            <div class="mb-3 mt-3">
                                <label for="rating" class="form-label">Rating</label>
                                <fieldset class="starability-heartbeat">
                                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                        value="1" checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>
                            <div class="md-3 mt-3">
                                <label for="comment" class="form-label">Comments</label>
                                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                                    required></textarea>
                                <div class="valid-feedback"> &#10003;</div>
                                <div class="invalid-feedback">Please Add Some Comments for Reviews</div>
                            </div>
                            <button class="btn btn-outline-dark mb-3 mt-3">Submit</button>
                        </form>
                        <%}%>
                            <% if(listing.reviews.length>0){%>
                                <hr>
                                <b>All Reviews</b>
                                <div class="row">
                                    <% for(review of listing.reviews) {%>
                                        <div class="card col-5 ms-3 mb-3">
                                            <div class="card-body star-rating-result">
                                                <h5 class="card-title">
                                                    <%= review.author.username%>
                                                </h5>
                                                <div class="starability-result">
                                                    <p class="starability-result card-text "
                                                        data-rating="<%=review.rating%>">
                                                    </p>
                                                </div>
                                                <p class="card-text">
                                                    <%=review.comment%>
                                                </p>
                                            </div>
                                            <form
                                                action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
                                                method="post" class="mb-3 mt-3">
                                                <button class="btn btn-sm btn-dark"> DELETE</button>
                                            </form>
                                        </div>
                                        <% } %>
                                </div>
                                <%}%>
                </div>
                <div class="col-8 offset-3 mb-3 card-title map-container map-container">
                    <h3>Where you'll be</h3>
                    <div id="listing-map" data-coordinates='<%- JSON.stringify(listing.geometry.coordinates)%>'
                        data-address="<%= listing.location || '' %>" data-Title="<%= listing.title || '' %>">
                    </div>
                </div>
    </div>

    </div>
    <script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/tax.js"></script>
    <script src="/js/leaflet.js"></script>